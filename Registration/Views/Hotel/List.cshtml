@using Registration.Model.Hotels
@model IEnumerable<Hotel>
@{
    ViewData["Title"] = "List";
}

<h1>Список отелей</h1>
@if (Model.Count() > 0)
{
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Location</th>
            <th>Rating</th>
            <th>Phone</th>
            <th>Email</th>
        </tr>
        @foreach (Hotel hotel in Model)
        {
            <tr>
                <td>
                    @hotel.Id
                </td>
                <td>
                    @hotel.Name
                </td>
                <td>
                    @hotel.Location
                </td>
                <td>
                    @hotel.Rating
                </td>
                <td>
                    @hotel.Phone
                </td>
                @* <td>
                    @hotel.Email
                </td> *@
                <td>
                    <a asp-controller="Hotel" asp-action="Delete" asp-route-id="@hotel.Id">Удалить</a>
                </td>
                <td>
                    <a asp-controller="Hotel" asp-action="Correct" asp-route-id="@hotel.Id">Изменить</a>
                </td>
                <td>
                    <a asp-controller="Room" asp-action="List" asp-route-hotelId="@hotel.Id">Комнаты</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>В базе данных отсутствуют таблицы</p>
}
<a asp-controller="Hotel" asp-action="Create">Добавить отель</a>


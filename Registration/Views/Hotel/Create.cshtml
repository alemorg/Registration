@using Registration.Model.Hotels
@model Hotel
@{
    ViewData["Title"] = "Create";
}

<h1>Создание отеля</h1>

<div class="registration_style">
	<form asp-controller="Hotel" asp-action="Create" method="post">
		<div class="box-line">
			<label asp-for="Name" class="label-line"></label>
			<input asp-for="Name" class="input-line" />
			<span asp-validation-for="Name" class="validation"></span>
		</div>

		<div class="box-line">
			<label asp-for="Location" class="label-line"></label>
			<input asp-for="Location" class="input-line" />
			<span asp-validation-for="Location" class="validation"></span>
		</div>

		<div class="box-line">
			<label asp-for="Rating" class="label-line"></label>
			<input asp-for="Rating" class="input-line" />
			<span asp-validation-for="Rating" class="validation"></span>
		</div>

		<div class="box-line">
			<label asp-for="Email" class="label-line"></label>
			<input asp-for="Email" class="input-line" />
			<span asp-validation-for="Email" class="validation"></span>
		</div>

		<div class="box-line">
			<label asp-for="Phone" class="label-line"></label>
			<input asp-for="Phone" class="input-line" />
			<span asp-validation-for="Phone" class="validation"></span>
		</div>

		<div class="box-line">
			<label asp-for="Description" class="label-line"></label>
			<input asp-for="Description" class="input-line" />
			<span asp-validation-for="Description" class="validation"></span>
		</div>

		<input type="submit" value="Добавить отель" class="btn-reg" />
	</form>
</div>

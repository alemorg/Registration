@using Registration.Model.Hotels
@model IEnumerable<Room>
@{
    ViewData["Title"] = "AllList";
}

<h1>Список всех комнат</h1>

@if (Model!=null)
{
    <table>
        <tr>
            <th>ID</th>
            <th>Номер отеля</th>
            <th>Номер комнаты</th>
            <th>Количество гостей</th>
            <th>Стоимость</th>
            <th>Площадь</th>
            <th>Доступно для бронирования</th>
            <th>Описание</th>
        </tr>
        @foreach (Room room in Model)
        {
            <tr>
                <td>@room.Id</td>
                <td>@room.HotelId</td>
                <td>@room.Number</td>
                <td>@room.Capasity</td>
                <td>@room.Price</td>
                <td>@room.Square</td>
                <td>@room.isActivity</td>
                <td>@room.Discription</td>
                <td><a asp-controller="Room" asp-action="Correct" asp-route-id="@room.Id">изменить</a></td>
                <td><a asp-controller="Room" asp-action="Delete" asp-route-id="@room.Id">удалить</a></td>
                <td><a asp-controller="Booked" asp-action="List" asp-route-hotelId="@room.HotelId" asp-route-roomId="@room.Id">список броней</a></td>
            </tr>
        }
    </table>
}
else
{
    <p>В базе данных отсутсвуют комнаты</p>
}


